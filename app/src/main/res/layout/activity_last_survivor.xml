<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgr_math"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintPlayer0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_player0"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivFigure0"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvName0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/user_name"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvScore0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/score_200"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivHeart00"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/none"
                    android:src="@drawable/heart" />

                <ImageView
                    android:id="@+id/ivHeart01"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/none"
                    android:src="@drawable/heart" />

                <ImageView
                    android:id="@+id/ivHeart02"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/none"
                    android:src="@drawable/heart" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivFigure0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/none"
            android:src="@drawable/mathkef_owl_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnHelp5050"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_buttons"
        android:text="@string/_50_50"
        android:textColor="@android:color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/ConstraintPlayer0"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutHold"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutHold"
        app:layout_constraintTop_toTopOf="@+id/ConstraintPlayer0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintPlayers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintPlayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape_enemy1"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@+id/ConstraintPlayer2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="@string/user_name"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivFigure1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvScore1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="@string/score_200"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/tvName1"
                app:layout_constraintStart_toStartOf="@+id/tvName1"
                app:layout_constraintTop_toBottomOf="@id/tvName1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/tvName1"
                app:layout_constraintStart_toStartOf="@+id/tvName1"
                app:layout_constraintTop_toBottomOf="@+id/tvScore1">

                <ImageView
                    android:id="@+id/ivHeart10"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@string/none"
                    android:src="@drawable/heart" />

                <ImageView
                    android:id="@+id/ivHeart11"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@string/none"
                    android:src="@drawable/heart" />

                <ImageView
                    android:id="@+id/ivHeart12"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@string/none"
                    android:src="@drawable/heart" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivFigure1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/none"
                android:src="@drawable/mathkef_owl_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginStart="3dp"
                app:layout_goneMarginTop="3dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintPlayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape_enemy2"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@+id/ConstraintPlayer3"
            app:layout_constraintStart_toEndOf="@id/ConstraintPlayer1"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="@string/user_name"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivFigure2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvScore2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="@string/score_200"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/tvName2"
                app:layout_constraintHorizontal_bias="0.565"
                app:layout_constraintStart_toStartOf="@+id/tvName2"
                app:layout_constraintTop_toBottomOf="@id/tvName2" />

            <ImageView
                android:id="@+id/ivFigure2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/none"
                android:src="@drawable/mathkef_owl_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/tvName2"
                app:layout_constraintStart_toStartOf="@+id/tvName2"
                app:layout_constraintTop_toBottomOf="@+id/tvScore2">

                <ImageView
                    android:id="@+id/ivHeart20"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@string/none"
                    android:src="@drawable/heart" />

                <ImageView
                    android:id="@+id/ivHeart21"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@string/none"
                    android:src="@drawable/heart" />

                <ImageView
                    android:id="@+id/ivHeart22"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@string/none"
                    android:src="@drawable/heart" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintPlayer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape_enemy3"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ConstraintPlayer2"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="@string/user_name"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivFigure3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvScore3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="@string/score_200"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/tvName3"
                app:layout_constraintStart_toStartOf="@+id/tvName3"
                app:layout_constraintTop_toBottomOf="@id/tvName3" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/tvName3"
                app:layout_constraintStart_toStartOf="@+id/tvName3"
                app:layout_constraintTop_toBottomOf="@+id/tvScore3">

                <ImageView
                    android:id="@+id/ivHeart30"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@string/none"
                    android:src="@drawable/heart" />

                <ImageView
                    android:id="@+id/ivHeart31"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@string/none"
                    android:src="@drawable/heart" />

                <ImageView
                    android:id="@+id/ivHeart32"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@string/none"
                    android:src="@drawable/heart" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivFigure3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/none"
                android:src="@drawable/mathkef_owl_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvPlayerTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/none"
        android:textColor="@color/gool_orange"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/ivTurnFigure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayoutHold"
        app:layout_constraintTop_toTopOf="@+id/linearLayoutHold" />

    <ImageView
        android:id="@+id/ivTurnFigure"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayoutHold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayoutHold"
        app:layout_constraintTop_toBottomOf="@id/tvPlayerTurn"
        android:contentDescription="@string/none" />

    <LinearLayout
        android:id="@+id/linearLayoutHold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvQuestionLS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape_dialog"
            android:padding="10dp"
            android:text="@string/none"
            android:textDirection="ltr"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOne"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/shape_dialog"
                android:padding="5dp"
                android:text=""
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnThree"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/shape_dialog"
                android:padding="5dp"
                android:text=""
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnTwo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/shape_dialog"
                android:padding="5dp"
                android:text=""
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnFour"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/shape_dialog"
                android:padding="5dp"
                android:text=""
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/gool_orange"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/linearLayoutHold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayoutHold" />

    <TextView
        android:id="@+id/tvQuestionCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/none"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvAnswered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="@string/none"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayoutHold" />

    <TextView
        android:id="@+id/tvTimeToStartSurvivor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ready"
        android:textColor="@color/gool_orange"
        android:textSize="60sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/lastSurvivorKonfetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
